@model QUIZ_MANAGEMENT_PROJECT_ASP.Models.UserModel

@{
    ViewData["Title"] = "LoginForm";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


@if (TempData["ErrorMessage"] != null)
{
    <script>
        Swal.fire({
            title: '<span style="color:#fff;">Error!</span>',
            html: '<span style="color:#fff;">@TempData["ErrorMessage"]</span>',
            icon: 'error',
            background: 'linear-gradient(135deg, #ff758c, #ff7eb3)',
            color: '#fff',
            iconColor: '#ff3333',
            confirmButtonText: 'Try Again',
            confirmButtonColor: '#ff4d4d',
            showClass: {
                popup: 'animate__animated animate__shakeX animate__faster'
            },
            hideClass: {
                popup: 'animate__animated animate__fadeOut animate__faster'
            },
            padding: '2rem',
            customClass: {
                title: 'text-white fs-4',
                htmlContainer: 'fs-6 text-white',
                confirmButton: 'btn btn-danger shadow-lg px-5 py-2 rounded-pill'
            }
        });
    </script>
}


@if (TempData["SuccessLogout"] != null)
{
    <script>
        Swal.fire({
            title: '<span style="color:#fff;">Success!</span>',
            html: '<span style="color:#fff;">@TempData["SuccessLogout"]</span>',
            icon: 'success',
            background: 'linear-gradient(135deg, #90ee90, #00b300)',
            color: '#fff',
            iconColor: '#00ff00',
            confirmButtonText: 'OK',
            confirmButtonColor: '#00cc66',
            showClass: {
                popup: 'animate__animated animate__bounceIn animate__faster'
            },
            hideClass: {
                popup: 'animate__animated animate__fadeOut animate__faster'
            },
            padding: '2rem',
            customClass: {
                title: 'text-white fs-4',
                htmlContainer: 'fs-6 text-white',
                confirmButton: 'btn btn-success shadow-lg px-5 py-2 rounded-pill'
            },
            timer: 3000,
            timerProgressBar: true
        });
    </script>
}



<div class="container mt-4">
    <div class="row">
        <!-- Left Side: Description about the website with beep animation -->
        <div class="col-12 col-md-6 animated fadeInLeft beep">
            <div class="card shadow-lg p-4 bg-black">
                <h3 class="text-center mb-4 text-warning">Welcome to the Quiz Management System</h3>
                <p class="text-center mb-3 text-warning">Our quiz management system helps you create, manage, and track quizzes with ease. Stay organized and streamline your process for a better user experience. It's time to improve your quiz performance!</p>

                <!-- Running message -->
                <div class="running-message-container bg-danger">
                    <marquee behavior="scroll" direction="left" class="text-light">
                        Join our community of quiz enthusiasts! Get real-time results, participate in challenges, and improve your skills.
                    </marquee>
                </div>

                <!-- Additional Information with slideUpDown animation -->
                <div class="mt-4 text-center slideUpDown">
                    <p class="text-light">Sign up now to start creating and participating in quizzes!</p>
                    <p class="text-warning font-weight-bold">Features include:</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="fa fa-check-circle text-success"></i> Easily create new quizzes</li>
                        <li><i class="fa fa-check-circle text-success"></i> Track quiz performance</li>
                        <li><i class="fa fa-check-circle text-success"></i> Share quizzes with others</li>
                        <li><i class="fa fa-check-circle text-success"></i> Participate in quiz challenges</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Right Side: Login Form with back/forward animation -->
        <div class="col-12 col-md-6 animated slideInRight backForward">
            <div class="card shadow-lg p-4 bg-info-subtle"> 
                <h4 class="card-title text-center mb-4 text-black">User Login</h4>

                <form class="needs-validation" asp-controller="User" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Username Field --> 
                    <div class="form-group mb-3 text-black">
                        <label asp-for="UserName" class="control-label">UserName <span class="text-danger">*</span></label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter Username/Email/Mobile" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-3 text-black">
                        <label asp-for="Password" class="control-label">Password <span class="text-danger">*</span></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Forgot Password Link -->
                    <div class="form-group mb-3 text-center">
                        <a asp-action="ForgotPassword" class="text-black">Forgot Password?</a>
                    </div>

                    <!-- Submit Button -->
                    <div class="row">
                        <div class="col-12">
                            <input type="submit" value="Login" class="btn bg-black text-light btn-block w-100 custom-btn-hover" />
                        </div>
                    </div>

                    <!-- New User Registration Link -->
                    <div class="form-group mt-3 text-center">
                        <p class="text-muted">
                            New User?
                            <a asp-controller="User" asp-action="RegisterUser" class="text-cyan-800 font-weight-bold custom-link-hover">
                                Create an Account
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
    </script>
}


<style>
    .custom-link-hover:hover {
        color: brown !important;
        text-decoration: underline;
    }
    .bg-gradient {
        background: linear-gradient(to right, #3B82F6, #6366F1);
    }
    .running-message-container {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .text-light {
        color: #f8f9fa !important;
    }
    .text-warning {
        font-weight: bold;
        color: #ffcc00;
    }
    .fa-check-circle {
        margin-right: 8px;
    }
</style>
