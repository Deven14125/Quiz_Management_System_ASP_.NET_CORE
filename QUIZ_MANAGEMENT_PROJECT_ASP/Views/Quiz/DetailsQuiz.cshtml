@model QUIZ_MANAGEMENT_PROJECT_ASP.Models.QuizModel

@{
    ViewData["Title"] = "DetailsQuiz";
}

<h1 class="text-center text-primary mb-4">Quiz Details</h1>

<div class="card shadow-lg p-4 mb-4 bg-light rounded">
    <h4 class="text-secondary">Quiz Information</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-3 font-weight-bold text-dark">
            Quiz ID
        </dt>
        <dd class="col-sm-9 text-info">
            @Model.QuizID
        </dd>

        <dt class="col-sm-3 font-weight-bold text-dark">
            Quiz Name
        </dt>
        <dd class="col-sm-9 text-info">
            @Model.QuizName
        </dd>

        <dt class="col-sm-3 font-weight-bold text-dark">
            Total Questions
        </dt>
        <dd class="col-sm-9 text-info">
            @Model.TotalQuestions
        </dd>

        <dt class="col-sm-3 font-weight-bold text-dark">
            Quiz Date
        </dt>
        <dd class="col-sm-9 text-info">
            @Model.QuizDate
        </dd>

        <dt class="col-sm-3 font-weight-bold text-dark">
            User ID
        </dt>
        <dd class="col-sm-9 text-info">
            @Model.UserID
        </dd>

        <dt class="col-sm-3 font-weight-bold text-dark">
            Created
        </dt>
        <dd class="col-sm-9 text-info">
            @Model.Created
        </dd>

        <dt class="col-sm-3 font-weight-bold text-dark">
            Modified
        </dt>
        <dd class="col-sm-9 text-info">
            @Model.Modified
        </dd>

    </dl>
</div>

<div class="d-flex justify-content-center mt-4">
    <a asp-action="QuizList" class="btn btn-info mx-2 shadow-sm">Back to List</a>
</div>

<style>
    /* Body background */
    body {
        background: linear-gradient(135deg, #89f7fe, #66a6ff);
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    h1 {
        font-family: 'Poppins', sans-serif;
        font-size: 2.8rem;
        font-weight: 700;
        color: #ff6f61;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .card {
        border-radius: 20px;
        background: linear-gradient(135deg, #f7e8ff, #ffd6d6);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .text-info {
        color: #1abc9c !important;
        font-weight: bold;
    }

    .text-secondary {
        color: #8e44ad !important;
        font-weight: bold;
    }

    dt {
        font-size: 1.2rem;
        font-family: 'Roboto', sans-serif;
        color: #34495e;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    dd {
        font-size: 1.1rem;
        font-family: 'Roboto', sans-serif;
        color: #2c3e50;
    }

    .btn-info {
        background-color: #e74c3c;
        border: none;
        color: #fff;
        padding: 10px 20px;
        font-size: 1.2rem;
        font-family: 'Poppins', sans-serif;
        border-radius: 30px;
        transition: background-color 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

        .btn-info:hover {
            background-color: #c0392b;
        }

    hr {
        border-top: 2px solid #ff6f61;
        margin-bottom: 20px;
    }

    .shadow-lg {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2) !important;
    }
</style>
